<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="z.com.DuanZiActivity">

    <RelativeLayout
        android:id="@+id/rl1"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:gravity="center_vertical"
        android:background="@color/colorTopColor">

        <TextView
            android:id="@+id/tv_czdz_quxiao"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="取消"
            android:gravity="center"
            android:layout_marginLeft="10dp"
            android:textColor="@color/comm_card_bg"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="发表文章"
            android:gravity="center"
            android:textSize="18sp"
            android:layout_centerHorizontal="true"
            android:textColor="@color/comm_card_bg"/>

        <TextView
            android:id="@+id/tv_czdz_fabiao"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="12dp"
            android:layout_marginRight="12dp"
            android:gravity="center"
            android:text="发表"
            android:textColor="@color/comm_card_bg" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll"
        android:layout_below="@+id/rl1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:id="@+id/et_czdz_neirong"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入内容"
            android:background="@null"
            android:layout_margin="10dp"/>

        <ImageView
            android:id="@+id/iv_czdz_tupian"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginTop="100dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/raw_1500020546"/>
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rlv_duanzi_tupian"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/ll">

    </android.support.v7.widget.RecyclerView>
</RelativeLayout>
