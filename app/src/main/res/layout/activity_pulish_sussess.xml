<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="z.com.PulishSussessActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/colorTopColor"
        android:id="@+id/include">

        <TextView
            android:id="@+id/cg_tv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="返回"
            android:drawableLeft="@drawable/iv_back"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:textColor="@color/TextWhite"
            android:textSize="18sp"
            android:layout_marginLeft="10dp"/>
    </RelativeLayout>

    <ImageView
        android:id="@+id/cg_iv_wancheng"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/raw_wancheng"
        android:layout_marginTop="100dp"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/cg_tv_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="发布成功,快去邀请小伙伴们围观吧~!"
        android:layout_below="@+id/cg_iv_wancheng"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>

    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cg_tv_share"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:gravity="center">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/sucessqq"
                android:background="@drawable/success_bg"
                android:padding="5dp"/>

            <TextView
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="QQ好友"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:gravity="center">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/successkongjian"
                android:background="@drawable/success_bg"
                android:padding="5dp"/>

            <TextView
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="QQ空间"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:gravity="center">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/successpengyou"
                android:background="@drawable/success_bg"
                android:padding="5dp"/>

            <TextView
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="朋友圈"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:gravity="center"
            >
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/successweixin"
                android:background="@drawable/success_bg"
                android:padding="5dp"/>

            <TextView
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="QQ好友"/>
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/cg_bt_look"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/ll"
        android:background="@drawable/bt_bg2"
        android:layout_marginTop="20dp"
        android:text="前去看看!!!"
        android:textColor="#fff"/>

</RelativeLayout>
