                android:src="@drawable/xin22"/>

            <TextView
                android:id="@+id/tv_frag1_xh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1234"
                android:textColor="@color/comm_card_bg"/>
        </LinearLayout>

        <LinearLayout
            android:visibility="gone"
            android:id="@+id/ll_frag1_sc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30dp"
            android:layout_marginTop="58dp"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/iv_frag1_sc"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/xing11"/>

            <ImageView
                android:id="@+id/iv_frag1_sc2"
                android:visibility="gone"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/xing22"/>

            <TextView
                android:id="@+id/tv_frag1_sc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1234"
                android:textColor="@color/comm_card_bg"/>
        </LinearLayout>

        <LinearLayout
            android:visibility="gone"
            android:id="@+id/ll_frag1_fx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30dp"
            android:layout_marginTop="110dp"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/iv_frag1_fx"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:src="@drawable/fenxiang"/>

            <TextView
                android:id="@+id/tv_frag1_fx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1234"
                android:textColor="@color/comm_card_bg"/>
        </LinearLayout>

        <LinearLayout
            android:visibility="gone"
            android:id="@+id/ll_frag1_pl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30dp"
            android:layout_marginTop="158dp"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/iv_frag1_pl"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/pinglun"/>

            <TextView
                android:id="@+id/tv_frag1_pl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1234"
                android:textColor="@color/comm_card_bg"/>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
