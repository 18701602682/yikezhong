<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/rl_frag1_item"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/iv_frag1_item_touxaing"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            app:placeholderImage="@drawable/raw_1500085327"
            app:roundAsCircle="true" />

        <TextView
            android:id="@+id/tv_frag1_item_nicheng"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="昵称"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="5dp"/>

        <TextView
            android:id="@+id/tv_frag1_item_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="日期"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="25dp"/>

        <LinearLayout
            android:id="@+id/ll_frag1_pingbi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentRight="true"
            android:gravity="center_horizontal"
            android:visibility="gone">

            <ImageView
                android:id="@+id/iv_frag1_item_pingbi"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:src="@drawable/shiled1" />

            <TextView
                android:id="@+id/tv_frag1_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="屏蔽"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_frag1_copy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentRight="true"
            android:gravity="center_horizontal"
            android:visibility="gone">

            <ImageView
                android:id="@+id/iv_frag1_item_copylink"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_centerVertical="true"
                android:src="@drawable/copylink1"
                android:layout_alignParentRight="true"/>

            <TextView
                android:id="@+id/tv_frag1_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="链接"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_frag1_jubao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentRight="true"
            android:gravity="center_horizontal"
            android:visibility="gone">

            <ImageView
                android:id="@+id/iv_frag1_item_jubao"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_centerVertical="true"
                android:src="@drawable/report1"
                android:layout_alignParentRight="true"/>

            <TextView
                android:id="@+id/tv_frag1_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="举报"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_frag1_item_jia"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/icon_open" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_frag1_title"
        android:layout_below="@+id/rl_frag1_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:textColor="@color/text_title_black"
        android:text="哈哈哈哈哈哈哈哈哈哈哈哈"/>

    <RelativeLayout
        android:id="@+id/rll"
        android:layout_below="@+id/tv_frag1_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!--<ImageView
            android:layout_width="match_parent"
            android:layout_height="210dp"
            android:scaleType="fitXY"
            android:src="@drawable/raw_1499917357"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"/>-->

        <include
            android:id="@+id/in"
            layout="@layout/simple_player_view_player"
            android:layout_width="match_parent"
            android:layout_height="210dp"/>


        <LinearLayout
            android:visibility="gone"
            android:id="@+id/ll_frag1_xh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30dp"
