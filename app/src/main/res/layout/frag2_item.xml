<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rl_frag2_item"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="15dp">

                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/iv_frag2_item_touxaing"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    app:placeholderImage="@drawable/raw_1500085327"
                    app:roundAsCircle="true" />

                <TextView
                    android:id="@+id/tv_frag2_item_nicheng"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="昵称"
                    android:layout_marginLeft="60dp"
                    android:layout_marginTop="5dp"/>

                <TextView
                    android:id="@+id/tv_frag2_item_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="日期"
                    android:layout_marginLeft="60dp"
                    android:layout_marginTop="25dp"/>

                <LinearLayout
                    android:id="@+id/ll_frag2_pingbi"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_alignParentRight="true"
                    android:gravity="center_horizontal">

                    <ImageView
                        android:id="@+id/iv_frag1_item_pingbi"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/shiled1" />

                    <TextView
                        android:id="@+id/tv_frag2_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="屏蔽"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_frag2_copy"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_alignParentRight="true"
                    android:gravity="center_horizontal">

                    <ImageView
                        android:id="@+id/iv_frag1_item_copylink"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/copylink1"
                        android:layout_alignParentRight="true"/>

                    <TextView
                        android:id="@+id/tv_frag2_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="链接"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_frag2_jubao"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_alignParentRight="true"
                    android:gravity="center_horizontal">

                    <ImageView
                        android:id="@+id/iv_frag1_item_jubao"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/report1"
                        android:layout_alignParentRight="true" />

                    <TextView
                        android:id="@+id/tv_frag2_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="举报"/>
                </LinearLayout>

                <ImageView
                    android:id="@+id/iv_frag2_item_jia"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/icon_open" />
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_frag2_item_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="10dp"
                android:text="顺丰到付个电话恒大华府后返回回复
        大户和防护的鹤顶红覅打飞机覅回合肥画法几何
        好肚饿金凤凰黄飞鸿方法范湖"/>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rlv_frag2_item"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            </android.support.v7.widget.RecyclerView>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/right_menu_pressed"/>
</LinearLayout>
